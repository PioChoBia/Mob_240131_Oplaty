<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mob_240131_Oplaty.Views.Suma"
             NavigationPage.HasNavigationBar="False">


    <StackLayout>
        <Button  x:Name="buttonSumaNowy" Text="nowy" Clicked="buttonSumaNowy_Clicked"/>


        <ListView x:Name="listSuma1" Margin="2" RowHeight="300">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Grid Margin="10" ColumnSpacing="10" RowSpacing="5" BackgroundColor="Aqua">
                            <Grid.ColumnDefinitions>                                
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="3*"/>                                                                                             
                            </Grid.ColumnDefinitions>
                            
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Label Text="gaz" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="6"
                                   HorizontalOptions="FillAndExpand" BackgroundColor="Beige"/>
                            <Label Text="( teraz " Grid.Column="0" Grid.Row="1"
                                   HorizontalOptions="Center"/>
                            <Label Text="{Binding GazStan }" Grid.Column="0"   Grid.Row="2"
                                   HorizontalOptions="StartAndExpand"/>

                            <Label Text=" - " Grid.Column="1" Grid.Row="1"
                                   HorizontalOptions="Center"/>
                            <Label Text="było )" Grid.Column="2" Grid.Row="1"
                                   HorizontalOptions="Center"/>
                            <Label Text=" * " Grid.Column="3" Grid.Row="1"
                                   HorizontalOptions="Center"/>
                            <Label Text="po" Grid.Column="4" Grid.Row="1"
                                   HorizontalOptions="Center"/>
                            <Label Text="=" Grid.Column="5" Grid.Row="1"
                                   HorizontalOptions="Center"/>




                        </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        
        
    </StackLayout>



</ContentPage>