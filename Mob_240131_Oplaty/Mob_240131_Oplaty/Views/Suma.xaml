<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mob_240131_Oplaty.Views.Suma"
             NavigationPage.HasNavigationBar="False">


    <StackLayout>
        <Button  x:Name="buttonSumaNowy" Text="nowy" Clicked="buttonSumaNowy_Clicked"/>


        <ListView x:Name="listViewWyliczenia" Margin="2" RowHeight="300">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout>
                            <Label Text="{Binding DataMiesiac}" BackgroundColor="#b1a7a6"/>

                            <Label Text="oplaty stałe=" BackgroundColor="#d3d3d3"/>
                            <Label Text="{Binding WierszOplatyStale1}" />
                            <Label Text="{Binding WierszOplatyStale2}"/>
                            <Label Text="{Binding WierszOplatyStale3}"/>





                        </StackLayout>                                                                       
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        
        
    </StackLayout>



</ContentPage>